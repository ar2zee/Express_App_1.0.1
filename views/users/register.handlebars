<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<h3 class="text-center">Account Register</h3>
			<img class="logo" src="/img/idea.png" alt="">
			<form action="/users/register" method="post">
				<div class="form-group">
					<label for="email">Email</label>
					<input value="{{email}}" type="email" class="form-control" required name="email">
				</div>
				<div class="form-group">
					<label for="name">Name</label>
					<input value="{{name}}" type="text" class="form-control" required name='name'>
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input value="{{password}}" type="password" class="form-control" required name="password">
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input value="{{password2}}" type="password" class="form-control" required name="password2">
				</div>
				<button class="btn btn-primary" type="submit">Submit</button>
			</form>
		</div>
	</div>
</div>